            <a class="nav-link {{active}}" data-toggle="tab" href="#tab-{{day}}" {{active}}>{{timestart}}</a>
        </li>
    {{/schedule}}
</ul>

<div class="tab-content" id="myTabContent">
    {{#schedule}}
        <div class="tab-pane {{active}}" id="tab-{{day}}" >
           <div class="d-flex flex-wrap">
                {{#presentation}}
                    <div class="d-flex {{classes}} m-1">
                        {{> block_mootprogram/presentation }}
                    </div>
                {{/presentation}}
            </div>
        </div>
    {{/schedule}}
</div>

