<h1 class="d-title"><span class="thin">Whats happening</span> Now?</h1>

<div class="row picks mt-3">
    {{#happeningnowrecord}}
        <div class="col-md-4">
            <div class="card mb-2 profile-card-2">
                <img class="card-img-top" src="{{imageurl}}" alt="Card image cap" height="150px">

                <div class="card-body">
                    {{#userid}}
                        <a href="https://events.moodle.com/user/profile.php?id={{userid}}">
                    {{/userid}}
                    {{#userpictureurl}}
                        <img src="{{userpictureurl}}" alt="profile-image" class="profile">
                    {{/userpictureurl}}
                    {{^userpictureurl}}
                        <img src="https://events.moodle.com/pluginfile.php/5/user/icon/workplace/f1" alt="profile-image" class="profile">
                    {{/userpictureurl}}
                    <h5 class="card-title mt-5">{{presentername}}</h5>
                    {{#userid}}
                        </a>
                    {{/userid}}
                    <h1 class="d-title"><span class="thin">{{title}}</span></h1>
                    <p class="card-text">{{description}}<br></p>
                    <a href="{{sessionurl}}" class="a-color">{{room}} <strong>Stream</strong> <br>{{#userdate}} {{timestart}}, {{#str}} strftimerecent {{/str}} {{/userdate}}</a>
                </div>
            </div>
        </div>
    {{/happeningnowrecord}}
</div>
